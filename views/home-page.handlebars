<!-- Create Event Form -->
<section class="container">
  <form class="text-center border border-light p-4 create-new-event">
    <p class="h3 mb-2">Start a new contribution</p>
    <p class="lead">
      Lead the way to making a difference.
    </p>
    <div class="row">
    <div class="col"></div>
    <div class="col-md-7">
      <!-- Event Title -->
      <input type="text" id="event-title" name="event-title" class="form-control mb-2" placeholder="Event Title">

      <!-- Event Description -->
      <textarea id="event-description" name="event-description" class="form-control mb-2" rows="3" placeholder="Event Description"></textarea>

      <!-- Event Date / Location -->
      <div class="form-row">
            <!-- Event Location -->
          <div class="col mb-2">
            <input type="text" id="event-location" name="event-location" class="form-control" placeholder="Event Location (FL)">
          </div>
            <!-- Event Date -->
          <div class="col">
            <input type="text" id="event-date" name="event-date" class="form-control" placeholder="Event Date (08/01/2021)">
          </div>
      </div>

      <!-- Create-Event Btn -->
      <button class="btn btn-primary my-3 btn-block create-new-event px-5" type="submit">Create Event</button>
    </div>
    <div class="col"></div>
    </div>
  </form>
</section>

<!-- Populate Events -->
{{#if events.length}}
<section class="container">
  <h2 class="text-center mb-4">Events</h2>
  <hr />
  <!-- Display events individually -->
  <div class="row">
    {{#each events as |event|}}
      {{> events event}}
    {{/each}}
  </div>
</section>
{{/if}}

<script src="/javascript/add-event.js"></script>
