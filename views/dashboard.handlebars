<section>
  <h2> Dashboard</h2>

  <form class="create-new-event">
    <div>
      <label for="event-title">Title</label>
      <input type="text" id="event-title" name="event-title" />
    </div>
    <div>
      <label for="event-description">Description</label>
      <input id="event-description" name="event-description" />
    </div>
    <div>
      <label for="event-date">Event Date</label>
      <input id="event-date" name="event-date" />
    </div>
    {{!-- make option select for locations array --}}
    <div>
      <label for="event-location">Event Location</label>
      <input id="event-location" name="event-location" />
    </div>

    <button type="submit" class="btn">Create</button>
  </form>
</section>

